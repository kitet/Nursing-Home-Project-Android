<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="tulipdev.nursinghomemng.SignUpActivity"
    android:paddingRight="10dp"
    android:paddingLeft="10dp">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter full name"
        android:maxLength="100" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/full_name"
        android:hint="e.g doe@john.com" />

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Available? :" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switchCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:textOff="UnAvailable"
            android:textOn="Available" />

    </LinearLayout>


    <android.support.design.widget.TextInputEditText
        android:id="@+id/address"
        android:hint="enter your address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/passwordT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:hint="enter password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/registerCGBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordT"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Register" />

</RelativeLayout>
